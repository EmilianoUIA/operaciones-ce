{
  "name": "operaciones-comercio-exterior",
  "version": "4.2.0",
  "description": "Registro de operaciones de comercio exterior como app de escritorio",
  "main": "main.js",
  "author": "Tu",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "release:win": "electron-builder --win -p always"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.tuempresa.operaciones",
    "productName": "Operaciones CE",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Operaciones CE"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "EmilianoUIA",
        "repo": "operaciones-ce"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
